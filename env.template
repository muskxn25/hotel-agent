# Amadeus Hotel API (for real-time hotel data)
# Get FREE API keys from https://developers.amadeus.com
# Free tier: 2,000 API calls/month
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here

# VAPI Configuration (for phone call handling)
# Get your API key from https://vapi.ai
VAPI_API_KEY=your_vapi_api_key_here
VAPI_ASSISTANT_ID=your_assistant_id_here
VAPI_PHONE_NUMBER_ID=your_phone_number_id_here

# Optional: OpenAI API Key for enhanced LLM features
OPENAI_API_KEY=your_openai_api_key_here

# Twilio Configuration (Optional - if using Twilio instead of VAPI for calls)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Server Configuration
FLASK_ENV=development
FLASK_DEBUG=1

